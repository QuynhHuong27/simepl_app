<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
  <%= link_to t("logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("title.home"), root_path, class: "nav-link" %></li>
        <li><%= link_to t("title.help"), help_path, class: "nav-link"  %></li>
        <% if logged_in? %>
          <li><%= link_to t("index.link"), users_path, class: "nav-link" %></li>
          <li><%= link_to t("users.profile"), current_user, class: "nav-link" %></li>
          <li><%= link_to t(".settings"), edit_user_path(current_user), class: "nav-link" %></li>
          <li><%= link_to t(".logout"), logout_path, method: :delete , class: "nav-link"%></li>
        <% else %>
          <li><%= link_to "Login", login_path, class: "nav-link" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
